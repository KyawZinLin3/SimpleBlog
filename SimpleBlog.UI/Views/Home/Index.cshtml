@{
    ViewData["Title"] = "Home Page";
}
@model List<SimpleBlog.UI.Models.Content.GetContent>

<style>
    .blog-card {
        max-width: 700px;
        margin: 10px auto;
        padding: 15px;
        border-radius: 10px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        background: #fff;
    }
    .avatar {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        object-fit: cover;
    }
    .chip {
        display: inline-block;
        padding: 5px 10px;
        margin: 2px;
        font-size: 12px;
        border-radius: 15px;
        background: #e0e0e0;
        color: #333;
    }
    .reaction-icons {
        font-size: 14px;
        color: gray;
    }
    .reaction-icons i {
        margin-right: 5px;
        cursor: pointer;
    }
</style>

<div class="container">
    <h2 class="text-center mb-4">Latest Blog Posts</h2>

    @foreach (var post in Model)
    {
        <a href="@Url.Action("Detail","Content",new {id = post.Id})" class="text-decoration-none text-dark">
        <div class="blog-card d-flex">
            <!-- Avatar Section -->
            <div class="me-3">
                    <i class="bi bi-person-circle avatar" style="font-size: 1.5rem;
        cursor: pointer;
        color: black;"></i>
            </div>

            <!-- Blog Content -->
            <div class="w-100">
                <h5 class="fw-bold">@post.Author</h5>
                <h3 class="fw-bold">@post.Title</h3>

                <!-- Tags -->
                <div>
                    @foreach (var tag in post.Tags)
                    {
                        <span class="chip">@tag.Name</span>
                    }
                </div>

                <!-- Reaction, Comments, Time -->
                <div class="d-flex justify-content-between mt-3">
                    <div class="reaction-icons">
                        <i class="bi bi-hand-thumbs-up"></i>0
                        <i class="bi bi-chat"></i> 0
                    </div>
                    <small class="text-muted">@post.TimeAgo</small>
                </div>
            </div>
        </div>
        </a>
    }
</div>
