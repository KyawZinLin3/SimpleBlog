@using System.Security.Claims
@model List<SimpleBlog.UI.Models.Content.GetContent>


<style>
    .profile-container {
        text-align: center;
        padding: 20px;
    }

    .avatar {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        object-fit: cover;
    }

    .blog-card {
        max-width: 700px;
        margin: 10px auto;
        padding: 15px;
        border-radius: 10px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        background: #fff;
        position: relative;
    }

    .chip {
        display: inline-block;
        padding: 5px 10px;
        margin: 2px;
        font-size: 12px;
        border-radius: 15px;
        background: #e0e0e0;
        color: #333;
    }

    .reaction-icons {
        font-size: 14px;
        color: gray;
    }

        .reaction-icons i {
            margin-right: 5px;
            cursor: pointer;
        }

    .dropdown-menu {
        min-width: 120px;
    }
</style>



    <div class="container">
        <!-- Profile Section -->
        <div class="profile-container">
            <i class="bi bi-person-circle avatar" style="font-size: 3rem;
        cursor: pointer;
        color: black;"></i>
            <h2 class="mt-2"></h2>
            <p class="text-muted">@User.FindFirst(ClaimTypes.Name)?.Value</p>
            <p class="text-muted">
                @User.FindFirst(ClaimTypes.Email)?.Value
            </p>
        </div>

        <h4 class="text-center mt-4">Posted Blogs</h4>

        @foreach (var post in Model)

        {
            <div class="blog-card d-flex">
                <!-- Blog Content -->
                <div class="w-100">
                    <h5 class="fw-bold">@post.Author</h5>
                    <h3 class="fw-bold">@post.Title</h3>

                    <!-- Tags -->
                    <div>
                        @foreach (var tag in post.Tags)

                        {
                            <span class="chip">@tag.Name</span>
                        }
                    </div>

                    <!-- Reaction, Comments, Time -->
                    <div class="d-flex justify-content-between mt-3">
                        <div class="reaction-icons">
                           @*  <i class="bi bi-hand-clap"></i> @post.Claps *@
                            <i class="bi bi-chat"></i> @post.Comments
                        </div>
                        <small class="text-muted">@post.TimeAgo</small>
                    </div>
                </div>

                <!-- Dropdown (Three Dots) -->
                <div class="dropdown ms-3">
                    <button class="btn btn-light btn-sm" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        &#x22EE; <!-- Three dots -->
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item navigation" href="@Url.Action("Edit", "Content", new { id = post.Id })">Update</a></li>
                        <li>
                            <form method="post" action="@Url.Action("Delete", "Content", new { id = post.Id })" onsubmit="return confirm('Are you sure you want to delete this post?');">
                                <button type="submit" class="dropdown-item text-danger">Delete</button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        }
    </div>

