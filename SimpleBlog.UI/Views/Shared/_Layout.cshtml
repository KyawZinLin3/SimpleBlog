<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SimpleBlog </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SimpleBlog.UI.styles.css" asp-append-version="true" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

  
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        /* Avatar Styling */
        .avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            object-fit: cover;
            cursor: pointer;
        }

        /* Edit Icon Styling */
        .edit-icon {
            font-size: 1.3rem;
            cursor: pointer;
            color: black;
        }

        /* Search Section (Hidden by Default) */
        #searchSection {
            display: none;
            padding: 15px;
            background: #f8f9fa;
           
        }
    </style>
    <script>
    // Toggle Mobile Search Bar
    function toggleSearch() {
    let searchSection = document.getElementById("searchSection");
    searchSection.style.display = searchSection.style.display === "block" ? "none" : "block";
    }
    </script>
</head>
<body>
    <header>
        @* <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SimpleBlog.UI</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav> *@

        <nav class="navbar navbar-light bg-white border-bottom">
            <div class="container d-flex align-items-center justify-content-between">

                <!-- Brand -->
                <a class="navbar-brand fw-bold fs-4" asp-area="" asp-controller="Home" asp-action="Index">SimpleBlog</a>

                <!-- Desktop Search Bar -->
                <form class="d-flex ms-auto me-3 d-none d-lg-flex">
                    <input class="form-control me-2" type="search" placeholder="Search Medium" aria-label="Search">
                    <button class="btn btn-outline-secondary" type="submit">Search</button>
                </form>

                <!-- Write a Story Icon -->
                <a class="nav-link me-3 d-none d-lg-inline" href="#" title="Write a Story">
                    <i class="bi bi-pencil-square edit-icon"></i> <!-- Bootstrap Edit Icon -->
                </a>

                <!-- Mobile Search Icon -->
                <a class="nav-link me-3 d-lg-none" href="javascript:void(0);" onclick="toggleSearch()">
                    <i class="bi bi-search fs-4"></i> <!-- Bootstrap Search Icon -->
                </a>

                <!-- Avatar (Dropdown on Click) -->
                <div class="dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="userDropdown" data-bs-toggle="dropdown">
                        <img src="https://via.placeholder.com/40" alt="Avatar" class="avatar">
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="#">Write a Story</a></li>
                        <li><a class="dropdown-item" href="#">Profile</a></li>
                        <li><a class="dropdown-item" href="#">Settings</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item text-danger" href="#">Sign Out</a></li>
                    </ul>
                </div>

            </div>
        </nav>
        <!-- Navbar End -->
        <!-- Mobile Search Section (Hidden by Default) -->
        <div id="searchSection">
            <input type="text" class="form-control mb-2" placeholder="Search Medium...">
            <h6>Recently Searched</h6>
            <ul class="list-group">
                <li class="list-group-item">Bootstrap 5 Navbar</li>
                <li class="list-group-item">Medium Clone</li>
                <li class="list-group-item">Responsive UI</li>
            </ul>
        </div>
       
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - SimpleBlog.UI - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
