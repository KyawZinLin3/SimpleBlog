        </div>
        <nav class="navbar navbar-light bg-white border-bottom">
            <div class="container d-flex align-items-center justify-content-between">

                <!-- Brand -->
                <a class="navbar-brand fw-bold fs-4" asp-area="" asp-controller="Home" asp-action="Index">SimpleBlog</a>

                <!-- Desktop Search Bar -->
                <form class="d-flex ms-auto me-3 d-none d-lg-flex">
                    <input class="form-control me-2" type="search" placeholder="Search Medium" aria-label="Search">
                    <button class="btn btn-outline-secondary" type="submit">Search</button>
                </form>

               

                <!-- Mobile Search Icon -->
                <a class="nav-link me-3 d-lg-none" href="javascript:void(0);" onclick="toggleSearch()">
                    <i class="bi bi-search fs-4"></i> <!-- Bootstrap Search Icon -->
                </a>

                <!-- Avatar (Dropdown on Click) -->
