                @if (User.Identity.IsAuthenticated)
                {
                    <!-- Write a Story Icon -->
                    <a class="nav-link me-3 d-none d-lg-inline" title="Write a Story" asp-area="" asp-controller="Content" asp-action="Create">
                        <i class="bi bi-pencil-square edit-icon"></i> <!-- Bootstrap Edit Icon -->
                    </a>
                    <!-- User Dropdown (Only if logged in) -->
                    <div class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                            <img src="@(User.FindFirst("AvatarUrl")?.Value ?? "https://via.placeholder.com/40")"
                                 alt="Avatar" class="rounded-circle" width="40" height="40">
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item d-lg-none" asp-controller="Content" asp-action="Create">Write a Story</a></li>
                            <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile">Profile</a></li>
                            <li><a class="dropdown-item" asp-controller="Account" asp-action="Settings">Settings</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form asp-area="" asp-controller="Auth" asp-action="Logout" method="post">
                                    <button type="submit" class="dropdown-item text-danger">Sign Out</button>
                                </form>
                            </li>
                        </ul>
                    </div>
                }
                else
                {
                    <!-- Login & Register Buttons (Only if NOT logged in) -->
                    <div class="nav-item">
                        <a class="btn btn-outline-primary me-2" asp-controller="Auth" asp-action="Login">Login</a>
                    </div>
                    <div class="nav-item">
                        <a class="btn btn-primary" asp-controller="Auth" asp-action="Register">Create Account</a>
                    </div>
                }

            </div>
        </nav>
        <!-- Navbar End -->
        <!-- Mobile Search Section (Hidden by Default) -->
        <div id="searchSection">
            <input type="text" class="form-control mb-2" placeholder="Search Medium...">
            <h6>Recently Searched</h6>
            <ul class="list-group">
                <li class="list-group-item">Bootstrap 5 Navbar</li>
                <li class="list-group-item">Medium Clone</li>
                <li class="list-group-item">Responsive UI</li>
            </ul>
        </div>
       
